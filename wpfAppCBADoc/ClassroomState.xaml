<Window x:Class="wpfAppCBADoc.ClassroomState"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfAppCBADoc"
        mc:Ignorable="d"
              Title="Editar Módulo Impartido" 
        Height="750" Width="1200"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}"
        SizeToContent="WidthAndHeight"
        MinWidth="800"
        MinHeight="600">

    <Window.Resources>
        <Style x:Key="EditFieldLabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="EditComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource MediumGrayBrush}"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="110"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <Border Grid.Row="0" Background="{StaticResource LightBlueBrush}" 
                CornerRadius="8" Padding="20,15" Margin="0,0,0,20"
                BorderBrush="{StaticResource LightBlueBrush}" 
                BorderThickness="2">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Classroom State" 
                          Foreground="{StaticResource DarkTextBrush}"
                          FontSize="20" FontWeight="Bold"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Formulario de Edición -->
        <GroupBox Grid.Row="1" Header="Edit State" 
                  Style="{StaticResource GroupBoxStyle}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="5">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Información del Módulo Actual -->
                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                            Background="{StaticResource LightGrayBrush}"
                            CornerRadius="4" Padding="15" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Classroom Information:" 
                                      FontWeight="Bold" 
                                      FontSize="16"
                                      Foreground="{StaticResource DarkTextBrush}"
                                      Margin="0,0,0,10"/>
                            <TextBlock x:Name="txtInfoActual" 
                                      TextWrapping="Wrap"
                                      FontSize="14"
                                      Foreground="{StaticResource DarkTextBrush}"
                                      LineHeight="20"/>
                        </StackPanel>
                    </Border>

                    <!-- Fila 1 - Docente y Módulo -->
                   

                    <!-- Fila 2 - Sucursal y Aula -->
                    

                    <Label Grid.Row="3" Grid.Column="0" Content="New lassroom State:" 
                           Style="{StaticResource EditFieldLabelStyle}"/>
                    <ComboBox Grid.Row="4" Grid.Column="0" 
                              Style="{StaticResource EditComboBoxStyle}"
                              x:Name="cmbAulaEdit"
                              DisplayMemberPath="NumeroAula"
                              SelectedValuePath="IdAula"/>

                    <!-- Fila 3 - Bimestre -->
                    


                </Grid>
            </ScrollViewer>
        </GroupBox>
        <!-- Información adicional -->
        <Border Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="3" 
        Background="{StaticResource LightPinkBrush}" 
        CornerRadius="8" Padding="15" Margin="0,20,0,10">
            <StackPanel>
                <TextBlock Text="! Información Importante:" 
                  FontWeight="Bold" 
                  FontSize="14"
                  Foreground="{StaticResource DarkTextBrush}"
                  Margin="0,0,0,8"/>
                <TextBlock Text="• Para asignar un horario al curso debe ir a la pestaña 'Ver Horarios'" 
                  Foreground="{StaticResource DarkTextBrush}"
                  FontSize="12"
                  Margin="0,0,0,4"/>
                <TextBlock Text="• No se puede cambiar módulo y bimestre si hay estudiantes inscritos" 
                  Foreground="{StaticResource DarkTextBrush}"
                  FontSize="12"
                  Margin="0,0,0,4"/>
                <TextBlock Text="• El horario se mantiene como nulo por defecto" 
                  Foreground="{StaticResource DarkTextBrush}"
                  FontSize="12"/>
            </StackPanel>
        </Border>
        <!-- Botones -->
        <Border Grid.Row="3" Background="{StaticResource WhiteBrush}" 
                CornerRadius="8" Padding="20" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="💾 Guardar Cambios" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="BtnGuardar_Click"
                        Width="180" Height="45"
                        Margin="0,0,20,0"
                        FontSize="14"/>
                <Button Content="❌ Cancelar" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="BtnCancelar_Click"
                        Width="130" Height="45"
                        FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
