<Window x:Class="wpfAppCBADoc.LogInUsr"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfAppCBADoc"
        mc:Ignorable="d"
       Title="CBA Personnel System - Account Creation" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/cbaBackground1.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <StackPanel Background="{StaticResource PinkBrush}" 
                    Grid.Row="2"
                    Grid.Column="2"
                    Opacity="0.8"/>

        <!-- Header -->
        <StackPanel Grid.ColumnSpan="5"
                    HorizontalAlignment="Center"
                    Width="900"
                    Height="105"
                    Background="{StaticResource PrimaryBrush}" 
                    VerticalAlignment="Center"
                    Grid.Row="0"
                    Grid.Column="0"
                    Orientation="Horizontal">

            <!-- Logo -->
            <StackPanel VerticalAlignment="Center"
                        Margin="20,0,15,0">
                <Image x:Name="logo" 
                       Source="/images/cba.png"
                       Stretch="Uniform"
                       Height="80"
                       Width="120"/>
            </StackPanel>

            <!-- Título -->
            <StackPanel VerticalAlignment="Center">
                <Label Content="CBA Personnel System"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Padding="0"/>
                <Label Content="Account Creation"
                       FontSize="16"
                       FontFamily="Arial"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource LightPinkBrush}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="0,-3,0,0"/>
            </StackPanel>

        </StackPanel>

        <!-- Panel del formulario -->
        <StackPanel Grid.Row="2"
                    Grid.Column="2"
                    Margin="30,20,30,20"
                    VerticalAlignment="Center">

            <!-- Información de la persona -->
            <Border Margin="0,0,0,25" 
                    Background="{StaticResource LightBlueBrush}" 
                    Padding="15" 
                    CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Personal Information" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,10"/>
                    <TextBlock x:Name="txtInfoPersona" 
                               FontSize="13"
                               Foreground="{StaticResource PrimaryBrush}"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Email -->
            <StackPanel Margin="0,0,0,15">
                <Label Content="Email:"
                       Style="{StaticResource FieldLabelStyle}"
                       Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername"
                         Style="{StaticResource TextBoxStyle}"/>
            </StackPanel>

            <!-- Password -->
            <StackPanel Margin="0,0,0,15">
                <Label Content="Password:"
                       Style="{StaticResource FieldLabelStyle}"
                       Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword"
                             Style="{StaticResource PasswordBoxStyle}"
                             Height="40"/>
            </StackPanel>

            <!-- Tipo de Usuario -->
            <StackPanel Margin="0,0,0,25">
                <Label Content="User Type:"
                       Style="{StaticResource FieldLabelStyle}"
                       Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbUserType"
                          Style="{StaticResource ComboBoxStyle}"
                          Height="40"/>
            </StackPanel>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,15,0,0">
                <Button x:Name="btnCrearUsuario"
                        Content="Create Account"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="btnCrearUsuario_Click"
                        Margin="0,0,10,0"
                        Width="140"
                        Height="35"/>
                <!-- Botón de retroceso -->
                <Button x:Name="btnRetroceder"
            Content="Back"
            Style="{StaticResource SecondaryButtonStyle}"
            Click="btnRetroceder_Click"
            Margin="0,0,10,0"
            Width="80"
            Height="35"/>
                <Button x:Name="btnCancelar"
                        Content="Cancel"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="btnCancelar_Click"
                        Width="110"
                        Height="35"/>
            </StackPanel>

        </StackPanel>

        <!-- Mensaje de error/éxito -->
        <TextBlock x:Name="txtMessage"
                   Grid.Row="2"
                   Grid.Column="1"
                   Grid.ColumnSpan="3"
                   FontFamily="pack://application:,,,/Fonts/#Avenir Next"
                   FontSize="13"
                   Foreground="{StaticResource AccentBrush}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"
                   Visibility="Collapsed"/>

    </Grid>
</Window>