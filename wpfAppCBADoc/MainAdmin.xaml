<Window x:Class="wpfAppCBADoc.MainAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfAppCBADoc"
        mc:Ignorable="d"
        Title="MainAdmin" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menú Lateral -->
        <Border Grid.Column="0" Background="{StaticResource PrimaryBrush}">
            <StackPanel>
                <!-- Logo o Título -->
                <Label Content="CBA DOC" 
                       Style="{StaticResource TitleLabelStyle}"
                       FontSize="24"
                       Height="80"
                       Background="{StaticResource SecondaryBrush}"/>

                <!-- Opciones del Menú -->
                <StackPanel Margin="10">
                    <Button x:Name="btnHorarios" Content="📅 Ver Horarios" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,5" Height="45"
                            Click="BtnHorarios_Click"/>

                    <Button x:Name="btnDocentes" Content="👨‍🏫 Ver Docentes" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,5" Height="45"
                            Click="BtnDocentes_Click"/>

                    <Button x:Name="btnModulos" Content="📚 Módulos Impartidos" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,5" Height="45"
                            Click="BtnModulos_Click"/>

                    <Button x:Name="btnAulas" Content="🏫 Agregar Aulas" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,5" Height="45"
                            Click="BtnAulas_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Área de Contenido Principal -->
        <TabControl x:Name="MainTabControl" Grid.Column="1" 
                    Background="{StaticResource VeryLightBlueBrush}">

            <!-- Pestaña de Módulos Impartidos (seleccionada por defecto) -->
            <TabItem x:Name="tabModulos" Header="Gestión de Módulos" IsSelected="True">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Título -->
                        <Label Grid.Row="0" Content="Gestión de Módulos Impartidos" 
                               Style="{StaticResource TitleLabelStyle}"
                               Foreground="{StaticResource PrimaryBrush}"
                               FontSize="28" FontWeight="Bold"
                               Margin="0,0,0,20"/>

                        <!-- Formulario para agregar módulos -->
                        <GroupBox Grid.Row="1" Header="Agregar Nuevo Módulo" 
                                  Style="{StaticResource GroupBoxStyle}">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Fila 1 -->
                                <Label Grid.Row="0" Grid.Column="0" Content="Nombre del Módulo:" 
                                       Style="{StaticResource FieldLabelStyle}" Foreground="{StaticResource PrimaryBrush}"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" 
                                         Style="{StaticResource TextBoxStyle}" 
                                         x:Name="txtNombreModulo"
                                         Margin="0,0,0,10"/>

                                <!-- Fila 2 -->
                                <Label Grid.Row="1" Grid.Column="0" Content="Curso:" 
                                       Style="{StaticResource FieldLabelStyle}" Foreground="{StaticResource PrimaryBrush}"/>
                                <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" 
                                          Style="{StaticResource ComboBoxStyle}"
                                          x:Name="cmbCurso"
                                          Margin="0,0,0,10"/>
                                <Button x:Name="btnEditClassroom"
                                        Content="Edit"
                                        Grid.Row="1"
                                        Grid.Column="3"
                                        Margin="10"
                                        Style="{StaticResource SecondaryButtonStyle}"/>

                                <!-- Fila 3 -->
                                <Label Grid.Row="2" Grid.Column="0" Content="Docente:" 
                                       Style="{StaticResource FieldLabelStyle}" Foreground="{StaticResource PrimaryBrush}"/>
                                <ComboBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" 
                                          Style="{StaticResource ComboBoxStyle}"
                                          x:Name="cmbDocente"
                                          Margin="0,0,0,10"/>

                                <!-- Fila 4 -->
                                <Label Grid.Row="3" Grid.Column="0" Content="Aula:" 
                                       Style="{StaticResource FieldLabelStyle}" Foreground="{StaticResource PrimaryBrush}"/>
                                <ComboBox Grid.Row="3" Grid.Column="1" 
                                          Style="{StaticResource ComboBoxStyle}"
                                          x:Name="cmbAula"
                                          Margin="0,0,10,10"/>

                                <Label Grid.Row="3" Grid.Column="2" Content="Horario:" 
                                       Style="{StaticResource FieldLabelStyle}" Foreground="{StaticResource PrimaryBrush}"/>
                                <ComboBox Grid.Row="4" Grid.Column="2" 
                                          Style="{StaticResource ComboBoxStyle}"
                                          x:Name="cmbHorario"
                                          Margin="0,0,0,10"/>

                                <!-- Fila 5 -->
                                <Label Grid.Row="4" Grid.Column="0" Content="Bimestre:" 
                                       Style="{StaticResource FieldLabelStyle}" Foreground="{StaticResource PrimaryBrush}"/>
                                <ComboBox Grid.Row="4" Grid.Column="1" 
                                          Style="{StaticResource ComboBoxStyle}"
                                          x:Name="cmbBimestre"
                                          Margin="0,0,10,20"/>

                                <!-- Botones -->
                                <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" 
                                            Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="➕ Agregar Módulo" 
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Click="BtnAgregarModulo_Click"
                                            Margin="0,0,20,0"/>
                                    <Button Content="🔄 Limpiar" 
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Click="BtnLimpiarFormulario_Click"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>

                        <!-- Lista de módulos existentes -->
                        <GroupBox Grid.Row="2" Header="Módulos Impartidos Existentes" 
                                  Style="{StaticResource GroupBoxStyle}" Margin="0,20,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Barra de búsqueda -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBox x:Name="txtBuscarModulo" 
                                             Style="{StaticResource TextBoxStyle}" 
                                             Width="300" Margin="0,0,10,0"
                                             TextChanged="TxtBuscarModulo_TextChanged"/>
                                    <Button Content="🔍 Buscar" 
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Click="BtnBuscarModulo_Click"/>
                                </StackPanel>

                                <!-- DataGrid para mostrar módulos -->
                                <DataGrid Grid.Row="1" x:Name="dgModulos" 
                                          AutoGenerateColumns="False"
                                          Background="{StaticResource VeryLightBlueBrush}"
                                          BorderBrush="{StaticResource SecondaryBrush}"
                                          BorderThickness="1">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                                        <DataGridTextColumn Header="Módulo" Binding="{Binding Nombre}" Width="200"/>
                                        <DataGridTextColumn Header="Curso" Binding="{Binding Curso}" Width="150"/>
                                        <DataGridTextColumn Header="Docente" Binding="{Binding Docente}" Width="180"/>
                                        <DataGridTextColumn Header="Aula" Binding="{Binding Aula}" Width="80"/>
                                        <DataGridTextColumn Header="Horario" Binding="{Binding Horario}" Width="120"/>
                                        <DataGridTextColumn Header="Bimestre" Binding="{Binding Bimestre}" Width="100"/>
                                        <DataGridTemplateColumn Header="Acciones" Width="120">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="✏️" 
                                                                Style="{StaticResource PrimaryButtonStyle}"
                                                                Padding="5" Margin="2"
                                                                Click="BtnEditarModulo_Click"/>
                                                        <Button Content="🗑️" 
                                                                Style="{StaticResource SecondaryButtonStyle}"
                                                                Padding="5" Margin="2"
                                                                Click="BtnEliminarModulo_Click"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Otras pestañas (vacías por ahora) -->
            <TabItem x:Name="tabHorarios" Header="Horarios"/>
            <TabItem x:Name="tabDocentes" Header="Docentes"/>
            <TabItem x:Name="tabAulas" Header="Aulas"/>
        </TabControl>
    </Grid>
</Window>
