<Window x:Class="wpfAppCBADoc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfAppCBADoc"
        mc:Ignorable="d"
        Title="CBA Personnel Management System" Height="750" Width="1200">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/cbaBackground1.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <StackPanel Background="{StaticResource PinkBrush}" 
                    Grid.Row="2"
                    Grid.Column="2"
                    Opacity="0.8"/>

        <!-- Header -->
        <StackPanel Grid.ColumnSpan="5"
                    HorizontalAlignment="Center"
                    Width="900"
                    Height="105"
                    Background="{StaticResource PrimaryBrush}" 
                    VerticalAlignment="Center"
                    Grid.Row="0"
                    Grid.Column="0"
                    Orientation="Horizontal">

            <!-- Logo -->
            <StackPanel VerticalAlignment="Center"
                        Margin="20,0,15,0">
                <Image x:Name="logo" 
                       Source="/images/cba.png"
                       Stretch="Uniform"
                       Height="80"
                       Width="120"/>
            </StackPanel>

            <!-- Título -->
            <StackPanel VerticalAlignment="Center">
                <Label Content="CBA Personnel System"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Padding="0"/>
                <Label Content="Sign Up"
                       FontSize="16"
                       FontFamily="Arial"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource LightPinkBrush}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="0,-3,0,0"/>
            </StackPanel>

        </StackPanel>

        <!-- Panel del formulario -->
        <StackPanel Grid.Row="2"
                    Grid.Column="2"
                    Margin="30,20,30,20"
                    VerticalAlignment="Center">

            <!-- Email -->
            <StackPanel Margin="0,0,0,20">
                <Label Content="Email:"
                       Style="{StaticResource FieldLabelStyle}"
                       Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail"
                         Style="{StaticResource TextBoxStyle}"
                         Height="40"/>
            </StackPanel>

            <!-- Password -->
            <StackPanel Margin="0,0,0,30">
                <Label Content="Password:"
                       Style="{StaticResource FieldLabelStyle}"
                       Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword"
                             Style="{StaticResource PasswordBoxStyle}"
                             Height="40"/>
            </StackPanel>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">
                <Button x:Name="btnExit"
                        Content="Exit"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Width="100"
                        Height="35"
                        Margin="0,0,15,0"/>
                <Button x:Name="btnGoToSignUp"
                        Content="Sign Up"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="btnGoToSignUp_Click"
                        Width="120"
                        Height="35"
                        Margin="0,0,15,0"/>
                <Button x:Name="btnGoToLogin"
                        Content="Log In"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="btnGoToLogin_Click"
                        Width="120"
                        Height="35"/>
            </StackPanel>

        </StackPanel>

        <!-- Mensaje de error/éxito -->
        <TextBlock x:Name="txtMessage"
                   Grid.Row="2"
                   Grid.Column="1"
                   Grid.ColumnSpan="3"
                   FontFamily="pack://application:,,,/Fonts/#Avenir Next"
                   FontSize="13"
                   Foreground="{StaticResource AccentBrush}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"
                   Visibility="Collapsed"/>

    </Grid>
</Window>