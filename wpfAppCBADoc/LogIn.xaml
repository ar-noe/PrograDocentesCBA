<Window x:Class="wpfAppCBADoc.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfAppCBADoc"
        mc:Ignorable="d"
        Title="CBA Personnel System - Personal Data" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/cbaBackground1.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <StackPanel Background="{StaticResource PinkBrush}" 
                    Grid.Row="2"
                    Grid.Column="2"
                    Opacity="0.8"/>

        <!-- Header -->
        <StackPanel Grid.ColumnSpan="5"
                    HorizontalAlignment="Center"
                    Width="900"
                    Height="105"
                    Background="{StaticResource PrimaryBrush}" 
                    VerticalAlignment="Center"
                    Grid.Row="0"
                    Grid.Column="0"
                    Orientation="Horizontal">

            <!-- Logo -->
            <StackPanel VerticalAlignment="Center"
                        Margin="20,0,15,0">
                <Image x:Name="logo" 
                       Source="/images/cba.png"
                       Stretch="Uniform"
                       Height="80"
                       Width="120"/>
            </StackPanel>

            <!-- Título -->
            <StackPanel VerticalAlignment="Center">
                <Label Content="CBA Personnel System"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Padding="0"/>
                <Label Content="Personal Data Registration"
                       FontSize="16"
                       FontFamily="Arial"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource LightPinkBrush}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="0,-3,0,0"/>
            </StackPanel>

        </StackPanel>

        <!-- Panel del formulario -->
        <ScrollViewer Grid.Row="2" Grid.Column="2" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20,10,20,20" VerticalAlignment="Top">

                <!-- CI -->
                <StackPanel Margin="0,0,0,10">
                    <Label Content="ID Number:"
                           Style="{StaticResource FieldLabelStyle}"
                           Margin="0,0,0,3"/>
                    <TextBox x:Name="txtCI"
                             Style="{StaticResource TextBoxStyle}"
                             Height="35"/>
                </StackPanel>

                <!-- Nombres -->
                <StackPanel Margin="0,0,0,10">
                    <Label Content="Names:"
                           Style="{StaticResource FieldLabelStyle}"
                           Margin="0,0,0,3"/>
                    <TextBox x:Name="txtNombres"
                             Style="{StaticResource TextBoxStyle}"
                             Height="35"/>
                </StackPanel>

                <!-- Apellido Paterno -->
                <StackPanel Margin="0,0,0,10">
                    <Label Content="Last Name:"
                           Style="{StaticResource FieldLabelStyle}"
                           Margin="0,0,0,3"/>
                    <TextBox x:Name="txtApPat"
                             Style="{StaticResource TextBoxStyle}"
                             Height="35"/>
                </StackPanel>

                <!-- Apellido Materno -->
                <StackPanel Margin="0,0,0,10">
                    <Label Content="Mother's Last Name:"
                           Style="{StaticResource FieldLabelStyle}"
                           Margin="0,0,0,3"/>
                    <TextBox x:Name="txtApMat"
                             Style="{StaticResource TextBoxStyle}"
                             Height="35"/>
                </StackPanel>

                <!-- Fecha Nacimiento -->
                <StackPanel Margin="0,0,0,20">
                    <Label Content="Birth Date:"
                           Style="{StaticResource FieldLabelStyle}"
                           Margin="0,0,0,3"/>
                    <DatePicker x:Name="dpFechaNac"
                                Style="{StaticResource DatePickerStyle}"
                                Height="35"/>
                </StackPanel>

                <!-- Botones -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0">
                    <Button x:Name="btnContinuar"
                            Content="Continue"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Click="btnContinuar_Click"
                            Margin="0,0,10,0"
                            Width="180"
                            Height="35"/>
                    <Button x:Name="btnCancelar"
                            Content="Cancel"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="btnCancelar_Click"
                            Width="110"
                            Height="35"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Mensaje de error/éxito -->
        <TextBlock x:Name="txtMessage"
                   Grid.Row="2"
                   Grid.Column="1"
                   Grid.ColumnSpan="3"
                   FontFamily="pack://application:,,,/Fonts/#Avenir Next"
                   FontSize="13"
                   Foreground="{StaticResource AccentBrush}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"
                   Visibility="Collapsed"/>

    </Grid>
</Window>