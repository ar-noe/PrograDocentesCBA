<Window x:Class="wpfAppCBADoc.ManagerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfAppCBADoc"
        mc:Ignorable="d"
        Title="CBA Personnel Main Page" Height="750" Width="1200"
 WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menú Lateral -->
        <Border Grid.Column="0" Background="{StaticResource PrimaryBrush}">
            <StackPanel>
                <!-- Logo o Título -->
                <Label Content="CBA DOC" 
                       Style="{StaticResource TitleLabelStyle}"
                       FontSize="24"
                       Height="80"
                       Background="{StaticResource SecondaryBrush}"/>

                <!-- Opciones del Menú -->
                <StackPanel Margin="10">
                    <Button x:Name="btnHorarios" Content="📅 Ver Horarios" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,5" Height="45"
                            Click="BtnHorarios_Click"/>

                    <Button x:Name="btnDocentes" Content="👨‍🏫 Ver Docentes" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,5" Height="45"
                            Click="BtnDocentes_Click"/>

                    <Button x:Name="btnModulos" Content="📚 Módulos Impartidos" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,5" Height="45"
                            Click="BtnModulos_Click"/>

                    <Button x:Name="btnAulas" Content="🏫 Agregar Aulas" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,5" Height="45"
                            Click="BtnAulas_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Área de Contenido Principal -->
        <TabControl x:Name="MainTabControl" Grid.Column="1" 
                    Background="{StaticResource VeryLightBlueBrush}">

            <!-- Pestaña de Módulos Impartidos (seleccionada por defecto) -->
            <TabItem x:Name="tabModulos" Header="Gestión de Módulos" IsSelected="True">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Título -->
                        <Label Grid.Row="0" Content="Gestión de Cursos" 
                               Style="{StaticResource TitleLabelStyle}"
                               Foreground="{StaticResource PrimaryBrush}"
                               FontSize="28" FontWeight="Bold"
                               Margin="0,0,0,20"/>

                        <!-- Formulario para agregar módulos -->
                        <GroupBox Grid.Row="1" Header="Add" 
                                  Style="{StaticResource GroupBoxStyle}">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Combobox Classroom -->
                                <StackPanel Margin="0,0,0,10">
                                    <Label Content="Select a classroom:"
               Style="{StaticResource FieldLabelStyle}"
               Margin="0,0,0,3"/>
                                    <ComboBox x:Name="cmbSelectClassroom"
                Style="{StaticResource ComboBoxStyle}"
                Height="40" SelectionChanged="cmbSelectClassroom_SelectionChanged"/>
                                </StackPanel>

                                <!-- Botones -->
                                <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" 
                                            Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="➕ Agregar Módulo" 
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Click="BtnAgregarModulo_Click"
                                            Margin="0,0,20,0"/>
                                    <Button Content="🔄 Limpiar" 
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Click="BtnLimpiarFormulario_Click"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>

                      
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Otras pestañas (vacías por ahora) -->
            <TabItem x:Name="tabHorarios" Header="Horarios"/>
            <TabItem x:Name="tabDocentes" Header="Docentes"/>
            <TabItem x:Name="tabAulas" Header="Aulas"/>
        </TabControl>
    </Grid>
</Window>
