<Window x:Class="wpfAppCBADoc.EditHorarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfAppCBADoc"
        mc:Ignorable="d"
       Title="Sistema CBA - Asignación de Horarios" 
        Height="700" Width="1300"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>

        <!-- Menú Lateral Izquierdo -->
        <Border Grid.Column="0" Background="{StaticResource PrimaryBlueBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo -->
                <Border Grid.Row="0" Background="{StaticResource DarkBlueBrush}" 
                        Height="100" Padding="20">
                    <Image x:Name="logo" 
                           Source="/images/cba.png"
                           Stretch="Uniform"
                           Height="80"
                           Width="120"/>
                </Border>

                <!-- Opciones del Menú -->
                <StackPanel Grid.Row="1" Margin="10,20">
                    <Button x:Name="btnHorarios" Content="📅 Schedules" 
                            Style="{StaticResource MenuButtonStyle}"
                            Margin="0,2" Height="45"
                            Background="{StaticResource LightBlueBrush}"
                            Foreground="{StaticResource DarkTextBrush}"/>

                    <Button x:Name="btnModulos" Content="📚 Imparted Modules" 
                            Style="{StaticResource MenuButtonStyle}"
                            Margin="0,2" Height="45" Click="btnModulos_Click"/>

                    <Button x:Name="btnAulas" Content="🏫 Classroom Management" 
                            Style="{StaticResource MenuButtonStyle}"
                            Margin="0,2" Height="45" Click="btnAulas_Click"/>
                    <Button x:Name="btnDeleteProfessor" Content="👔 Delete Professor" 
        Style="{StaticResource MenuButtonStyle}"
    Margin="0,2" Height="45" Click="btnDeleteProfessor_Click"
    />
                </StackPanel>

                <!-- Footer -->
                <StackPanel x:Name="btnExit" Grid.Row="2" VerticalAlignment="Bottom">
                    <Button Content="➜] Exit" 
        Style="{StaticResource SecondaryButtonStyle}"
            
        Margin="0,0,0,30"
        Width="150" Click="Button_Click"/>
                    <Border Grid.Row="2" Background="{StaticResource DarkBlueBrush}">
                        <StackPanel VerticalAlignment="Bottom"  Margin="10">
                            <!-- Texto del sistema abajo -->
                            <TextBlock Text="CBA Management System v1.0" 
                        Foreground="{StaticResource WhiteBrush}"
                        HorizontalAlignment="Center"
                        FontSize="10"
                        TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Área Central Principal -->
        <Border Grid.Column="1" Background="{StaticResource BackgroundBrush}" 
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Título Principal -->
                <Border Grid.Row="0" Background="{StaticResource WhiteBrush}" 
                        CornerRadius="8" Padding="20,15" Margin="0,0,0,10"
                        BorderBrush="{StaticResource LightBlueBrush}" 
                        BorderThickness="2">
                    <TextBlock Text="Schedule Management" 
                               Foreground="{StaticResource DarkTextBrush}"
                               FontSize="24" FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Título del Horario del Docente -->
                <Border Grid.Row="1" Background="{StaticResource LightGrayBrush}" 
                        CornerRadius="6" Padding="15,10" Margin="0,0,0,10">
                    <TextBlock x:Name="txtTituloHorarioDocente" 
                               Text="Teacher's work schedule: [Name]"
                               Foreground="{StaticResource DarkTextBrush}"
                               FontSize="16" FontWeight="SemiBold"/>
                </Border>

                <!-- Sección: Horarios Actuales -->
                <GroupBox Grid.Row="2" Header="Assigned Schedules" 
                          Style="{StaticResource GroupBoxStyle}" 
                          Margin="0,0,0,5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- DataGrid de Horarios -->
                        <DataGrid Grid.Row="0" x:Name="dgHorariosDocente" 
                                  Style="{StaticResource DataGridStyle}"
                                  ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Time" Binding="{Binding Hora}" Width="120"/>
                                <DataGridTextColumn Header="Course" Binding="{Binding NombreCurso}" Width="200"/>
                                <DataGridTextColumn Header="Classroom" Binding="{Binding Aula}" Width="100"/>
                                <DataGridTextColumn Header="Branch" Binding="{Binding Sucursal}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Botón Aceptar -->
                        <Button Grid.Row="1" Content="Accept" 
                                Style="{StaticResource PrimaryButtonStyle}"
                                HorizontalAlignment="Right"
                                Margin="0,10,0,0"
                                Width="100" Height="35"
                                Click="BtnAceptar_Click"/>
                    </Grid>
                </GroupBox>

                <!-- Sección: Módulos a Asignar -->
                <GroupBox Grid.Row="3" Header="Available Modules to Assign" 
                          Style="{StaticResource GroupBoxStyle}"
                          Margin="0,5,0,0">
                    <DataGrid x:Name="dgModulosDisponibles" 
                              Style="{StaticResource DataGridStyle}"
                              ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" Binding="{Binding Horario}" Width="120"/>
                            <DataGridTextColumn Header="Module" Binding="{Binding Nombre}" Width="200"/>
                            <DataGridTextColumn Header="Classroom" Binding="{Binding Aula}" Width="100"/>
                            <DataGridTemplateColumn Header="Action" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="🗑️" 
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                Padding="5" Margin="2"
                                                Width="80" Height="30"
                                                Click="BtnEliminarHorario_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
            </Grid>
        </Border>

        <!-- Panel Lateral Derecho -->
        <Border Grid.Column="2" Background="{StaticResource LightPinkBrush}" 
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Título Seleccionar Docente -->
                <Border Grid.Row="0" Background="White" 
                        CornerRadius="6" Padding="15,10" Margin="0,0,0,15">
                    <TextBlock Text="Select Teacher" 
                               Foreground="{StaticResource DarkTextBrush}"
                               FontSize="18" FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- Formulario Docente -->
                <GroupBox Grid.Row="1" Header="Filter"
                          Style="{StaticResource GroupBoxStyle}"
                          Background="{StaticResource WhiteBrush}"
                          Margin="0,0,0,15">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBox 
                          x:Name="txtDocentesSearch"
     Style="{StaticResource TextBoxStyle}" 
     Width="auto" Margin="0,0,10,0"
     TextChanged="TxtBuscarDoc_TextChanged"
     Background="{StaticResource WhiteBrush}"/>
                    </Grid>
                </GroupBox>

                <!-- Formulario Filtros -->
                <GroupBox Grid.Row="2" Header="Data" 
          Style="{StaticResource GroupBoxStyle}"
          Background="{StaticResource WhiteBrush}">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DataGrid x:Name="dgDocentes" 
                  Style="{StaticResource DataGridStyle}"
                  ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  SelectionChanged="DgDocentes_SelectionChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="120" Visibility="Hidden"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding NombreCompleto}" Width="200"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Combobox de Horarios -->
                        <Label Grid.Row="1" Content="Select Schedule:" 
               Margin="0,10,0,5"
               Foreground="{StaticResource DarkTextBrush}"/>

                        <ComboBox Grid.Row="2" x:Name="cmbHorarios"
                  Style="{StaticResource ComboBoxStyle}"
                  Margin="0,0,0,10"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </Border>
    </Grid>
</Window>
